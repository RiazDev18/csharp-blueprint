@model IEnumerable<OnlineExaminationSystem.Models.Exam>

@{
    ViewData["Title"] = "Exam List";
}

<!-- Page Heading -->
<div class="container mt-4">
    <div class="text-center mb-4">
        <h1 class="display-4">Available Exams</h1>
        <p class="lead">Browse the list of scheduled exams.</p>
    </div>

    <!-- Table of Exams -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover shadow">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Duration</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var exam in Model)
                {
                    <tr>
                        <td class="fw-bold">@exam.Title</td>
                        <td>@exam.Description</td>
                        <td>@exam.ExamDate.ToString("dd MMM yyyy")</td>
                        <td>@exam.Duration minutes</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
